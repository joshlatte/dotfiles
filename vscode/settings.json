// Place your settings in this file to overwrite the default settings
{
    "window.zoomLevel": 0,
    "workbench.statusBar.visible": true,
    "editor.tabSize": 2,

    // Configure glob patterns for excluding files and folders in searches. Inherits all glob patterns from the files.exclude setting.
    "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/.git": true
    },

    // Controls how the editor should render whitespace characters, posibilties are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
    "editor.renderWhitespace": "none",

    // Controls the cursor style, accepted values are 'block', 'line' and 'underline'
    "editor.cursorStyle": "line",

    // Controls whether the editor should render indent guides
    "editor.renderIndentGuides": true,

    // When enabled, will trim trailing whitespace when you save a file.
    "files.trimTrailingWhitespace": true,

    // The default end of line character.
    "files.eol": "\n",

    // Controls the font size in pixels.
    "editor.fontSize": 11,

    // Controls the font size in pixels of the terminal, this defaults to editor.fontSize's value.
    "terminal.integrated.fontSize": 11,
    "diffEditor.renderSideBySide": false,
    "files.insertFinalNewline": true,
    "slack.teamToken": "xoxp-3645231051-4461487626-142060127526-94ae86e5e11a4f5229528be4c1645bfb",
    "slack.username": "@josh.manuel",
    "zenMode.hideTabs": false,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\Sysnative\\bash.exe",
    "window.title": "${activeEditorLong}${separator}${rootName}",

    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showUpdateMessage": false,
    "explorer.autoReveal": false,
    "workbench.colorTheme": "FlatUI Immersed",
    "editor.multiCursorModifier": "ctrlCmd",
    "gitlens.advanced.messages": {
      "suppressCommitHasNoPreviousCommitWarning": false,
      "suppressCommitNotFoundWarning": false,
      "suppressFileNotUnderSourceControlWarning": false,
      "suppressGitVersionWarning": false,
      "suppressLineUncommittedWarning": false,
      "suppressNoRepositoryWarning": false,
      "suppressResultsExplorerNotice": false,
      "suppressShowKeyBindingsNotice": true,
      "suppressUpdateNotice": true,
      "suppressWelcomeNotice": false
    },
    "git.autofetch": true,
    "gitlens.keymap": "none",
    // Vim settings
    "vim.hlsearch": true,
    "vim.leader": ",",
    "gitlens.historyExplorer.enabled": true,
    "gitlens.codeLens.enabled": false,
    "editor.minimap.enabled": false,
    "files.trimFinalNewlines": true,
    "editor.formatOnPaste": true,
    "explorer.confirmDelete": false,
    "vim.disableExtension": true,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "telemetry.enableTelemetry": false,
    "breadcrumbs.enabled": true,
    "editor.wordWrap": "on",
    "vsicons.dontShowNewVersionMessage": true,
    "ruby.specCommand": "docker-compose run web rspec"
  }
